        String insertCOLS[] = {"Running", "Time", "Distance", "RedCarsSeen"};
        String insertCOLS2[] = {"Reading", "Time", "Pages_Read"};


        if(DatabaseHelper.getsInstance(getApplicationContext()).tablesInfo.containsKey("Running") == false)
            DatabaseHelper.getsInstance(getApplicationContext()).createTable(insertCOLS);
        if(DatabaseHelper.getsInstance(getApplicationContext()).tablesInfo.containsKey("Reading") == false)
            DatabaseHelper.getsInstance(getApplicationContext()).createTable(insertCOLS2);

        if(DatabaseHelper.getsInstance(getApplicationContext()).tablesInfo.containsKey("Running") == false);
            DatabaseHelper.getsInstance(getApplicationContext()).createTable(insertCOLS);


        String insertDATA[] = {"Running", "1000", "5", "4"};
        String insertDATA2[] = {"Running", "10.21", "435", "4"};
        String insertDATA3[] = {"Reading", "10.21", "0"};
        String insertDATA4[] = {"Reading", "10.21", "4"};
        DatabaseHelper.getsInstance(getApplicationContext()).insertData(insertDATA);
        DatabaseHelper.getsInstance(getApplicationContext()).insertData(insertDATA2);
        DatabaseHelper.getsInstance(getApplicationContext()).insertData(insertDATA3);
        DatabaseHelper.getsInstance(getApplicationContext()).insertData(insertDATA4);
//        myDB_helper.insertData(insertDATA);
//        myDB_helper.insertData(insertDATA2);
//        myDB_helper.insertData(insertDATA3);
//        myDB_helper.insertData(insertDATA4);

        Hashtable<String, List<String>>someActivity =  DatabaseHelper.getsInstance(getApplicationContext()).grabActivity("Reading");
        
        //to get all the activity names
        Set j =  DatabaseHelper.getsInstance(getApplicationContext()).tablesInfo.keySet();
